<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
	
	<style name="LoadingDialog" parent="Theme.AppCompat.Dialog.Alert">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:backgroundDimEnabled">true</item>
		<item name="android:windowLightStatusBar">false</item>
	</style>
	
	<style name="BigButton">
		<item name="android:layout_margin">8dp</item>
		<item name="android:background">@drawable/button_selector</item>
		<item name="android:padding">16dp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize" tools:ignore="SpUsage">20dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center</item>
	</style>
	
	<style name="MediumButton">
		<item name="android:layout_margin">8dp</item>
		<item name="android:background">@drawable/button_selector</item>
		<item name="android:padding">12dp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize" tools:ignore="SpUsage">16dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center</item>
	</style>
	
	<style name="HintText" parent="TextAppearance.Design.Hint">
		<item name="android:textColor">@color/pastel_yellow</item>
		<item name="android:textSize" tools:ignore="SpUsage">12dp</item>
	</style>
	
	<style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">false</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:background">@color/transparent</item>
		<item name="android:windowBackground">@color/transparent</item>
		<item name="android:statusBarColor">@color/white</item>
	</style>

</resources>